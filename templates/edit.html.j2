{%extends 'base.html.j2'%}

{% block head %}
<title>Update Post</title>


{% endblock %} 

{% block body %}
<h1>Editing Post</h1>

  <hr>
    <h2>Edit:</h2>
    <form action="/posts/edit/{{post.id}}" method="post">
        <label for="title">Title:</label> 
        <input class="form-control" type="text" name="title" id="title" value="{{post.title}}" aria-label="Enter Title">
      <br>
      <label for="author">Author:</label> 
        <input class="form-control" type="text" name="author" id="author" value="{{post.author}}" placeholder="Enter Author" aria-label="Enter Author">
      <br>
        <label for="content">Post:</label>
        <textarea class='form-control' name='content' id="content"  rows="3"  aria-label="Enter Content" style="white-spacing: pre-wrap">{{post.content}}</textarea>
      <br>
      <input type="submit" value="Save">
    </form>
  <hr>
{% endblock %}